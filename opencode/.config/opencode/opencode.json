{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "cloudflare": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://docs.mcp.cloudflare.com/mcp"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    },
    "yaak": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "http://127.0.0.1:64343/mcp"],
      "enabled": true
    }
  },
  "tools": {
    "chrome-devtools_*": false,
    "cloudflare_*": false,
    "playwright_*": false,
    "yaak_*": false
  },
  "small_model": "github-copilot/claude-haiku-4.5"
}
